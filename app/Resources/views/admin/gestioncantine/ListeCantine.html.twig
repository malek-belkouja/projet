                            <td class="center">{{ jour_par_nombre[cantine.jourcantine] }}</td>
                            <td class="center">{{cantine.sceance}}</td>
                            <td class="center">
                                <a class="btn btn-info" href="{{ path('modifier_cantine_admin',{'id':cantine.id}) }}">
